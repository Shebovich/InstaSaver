<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/actualyProfile"
        android:layout_width="70dp"
        android:layout_height="70dp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        app:layout_constraintStart_toStartOf="@+id/actualyProfile"
        app:layout_constraintTop_toBottomOf="@+id/actualyProfile"
        android:layout_width="wrap_content"
        android:text="Alejandro"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/actualyProfile"
        android:textColor="#000"
        android:layout_height="wrap_content">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>